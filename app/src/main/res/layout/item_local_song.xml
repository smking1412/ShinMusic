<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_local_song"
        android:src="@drawable/iconfloatingactionbutton"
        android:layout_margin="5dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:shapeAppearanceOverlay="@style/CornerRadius">
    </com.google.android.material.imageview.ShapeableImageView>

    <TextView
        android:id="@+id/tv_local_song_name"
        android:text="Tên bài hát hot"
        android:textSize="18sp"
        android:textColor="#363636"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_toRightOf="@+id/img_local_song"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:id="@+id/tv_local_song_singer_name"
        android:text="Ca sỹ"
        android:textColor="#8c8a8a"
        android:textSize="18dp"
        android:singleLine="true"
        android:layout_toRightOf="@id/img_local_song"
        android:layout_below="@id/tv_local_song_name"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>

    <View
        android:layout_below="@id/img_local_song"
        android:background="#9E9E9E"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</RelativeLayout>